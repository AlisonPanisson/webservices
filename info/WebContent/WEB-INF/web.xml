<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>info</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>info</param-value>
    </init-param>
    <init-param>
      <param-name>print</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>randgen</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>interval</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>passw0rd</param-value>
    </init-param>
    <init-param>
      <param-name>user</param-name>
      <param-value>gaiandb</param-value>
    </init-param>
    <init-param>
      <param-name>url</param-name>
      <param-value>jdbc:derby://localhost:6414/gaiandb</param-value>
    </init-param>
    <init-param>
      <param-name>driver</param-name>
      <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>info.ContainerContextClosedHandler</listener-class>
  </listener>
</web-app>